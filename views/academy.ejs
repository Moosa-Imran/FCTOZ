<!DOCTYPE html>
<html lang="en" class="light">
<head>
    <%- include('partials/head') %>
    <style>
        .category-icon {
            width: 1rem;
            height: 1rem;
            margin-right: 0.5rem;
        }
        .video-card {
            min-width: 300px;
        }
    </style>
</head>
<body class="bg-slate-50 dark:bg-black text-slate-800 dark:text-slate-200">
    <div id="sidebar-overlay" class="fixed inset-0 bg-black/60 z-30 md:hidden hidden"></div>
    <div class="flex min-h-screen">
        <%- include('partials/sidebar.ejs') %>
        <div class="flex-1 md:ml-64 min-w-0">
            <%- include('partials/header.ejs') %>
            <main class="pt-24 px-4 sm:px-6 lg:px-8 pb-8">
                <!-- Header -->
                <div class="text-center">
                    <h1 class="text-3xl sm:text-4xl font-bold text-gold-500">FCTOZ Academy</h1>
                    <p class="mt-2 max-w-2xl mx-auto text-slate-500 dark:text-slate-400">Your one-stop destination to master the art and science of trading. From fundamentals to advanced strategies, we've got you covered.</p>
                </div>

                <!-- Search Bar -->
                <div class="mt-8 max-w-xl mx-auto">
                    <div class="relative">
                        <i data-lucide="search" class="absolute left-4 top-1/2 -translate-y-1/2 h-5 w-5 text-slate-400"></i>
                        <input type="text" placeholder="Search articles, videos, or topics..." class="w-full pl-12 pr-4 py-3 bg-white dark:bg-slate-900/50 border border-slate-300 dark:border-slate-700 rounded-full focus:border-gold-500 focus:ring-gold-500 search-glow">
                    </div>
                </div>

                <!-- Featured Article -->
                <div class="mt-12">
                    <h2 class="text-2xl font-bold mb-4">Featured Article</h2>
                    <div class="bg-white dark:bg-slate-900/50 rounded-xl border border-slate-200 dark:border-slate-800 card-glow overflow-hidden md:flex">
                        <div class="md:w-1/2 lg:w-3/5">
                            <img src="<%= academy.featuredArticle.imageUrl %>" alt="Featured article thumbnail" class="h-full w-full object-cover">
                        </div>
                        <div class="p-6 md:p-8 md:w-1/2 lg:w-2/5 flex flex-col">
                            <p class="text-sm font-medium text-gold-600 dark:text-gold-400"><%= academy.featuredArticle.category %></p>
                            <h3 class="mt-2 text-xl font-bold"><%= academy.featuredArticle.title %></h3>
                            <p class="mt-2 text-sm text-slate-600 dark:text-slate-400 flex-grow"><%= academy.featuredArticle.excerpt %></p>
                            <div class="mt-6 flex items-center justify-between text-xs text-slate-500 dark:text-slate-400">
                                <span>By <%= academy.featuredArticle.author %> on <%= academy.featuredArticle.date %></span>
                                <span><%= academy.featuredArticle.readTime %></span>
                            </div>
                            <button class="mt-6 w-full px-5 py-3 font-semibold text-white bg-gold-600 hover:bg-gold-700 rounded-lg button-glow">Read Full Article</button>
                        </div>
                    </div>
                </div>

                <!-- Learning Paths -->
                <div class="mt-12">
                    <h2 class="text-2xl font-bold mb-4">Learning Paths</h2>
                    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
                        <% academy.learningPaths.forEach(path => { %>
                            <div class="p-6 bg-white dark:bg-slate-900/50 rounded-xl border border-slate-200 dark:border-slate-800 card-glow flex flex-col">
                                <div class="flex items-center">
                                    <div class="p-2 bg-<%= path.color %>-100 dark:bg-<%= path.color %>-500/10 rounded-lg mr-4">
                                        <i data-lucide="<%= path.icon %>" class="h-6 w-6 text-<%= path.color %>-500"></i>
                                    </div>
                                    <h3 class="text-lg font-bold"><%= path.title %></h3>
                                </div>
                                <p class="mt-3 text-sm text-slate-600 dark:text-slate-400 flex-grow"><%= path.description %></p>
                                <div class="mt-4 flex justify-between items-center">
                                    <span class="text-xs font-medium text-slate-500"><%= path.articleCount %> Articles</span>
                                    <button class="text-sm font-semibold text-gold-600 hover:text-gold-500">Start Learning <i data-lucide="arrow-right" class="inline h-4 w-4"></i></button>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>

                <!-- Latest Articles -->
                <div class="mt-12">
                    <h2 class="text-2xl font-bold mb-4">Latest Articles</h2>
                    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
                        <% academy.articles.forEach(article => { %>
                            <div class="bg-white dark:bg-slate-900/50 rounded-xl border border-slate-200 dark:border-slate-800 card-glow overflow-hidden flex flex-col">
                                <img src="<%= article.imageUrl %>" alt="Article thumbnail" class="h-48 w-full object-cover">
                                <div class="p-6 flex flex-col flex-grow">
                                    <div class="flex items-center justify-between">
                                        <p class="text-sm font-medium text-gold-600 dark:text-gold-400 flex items-center"><i data-lucide="<%= article.icon %>" class="category-icon"></i><%= article.category %></p>
                                        <span class="px-2 py-1 text-xs font-medium text-blue-700 bg-blue-100 dark:text-blue-300 dark:bg-blue-500/20 rounded-full"><%= article.difficulty %></span>
                                    </div>
                                    <h3 class="mt-3 text-lg font-bold flex-grow"><%= article.title %></h3>
                                    <div class="mt-4 flex items-center justify-between text-xs text-slate-500 dark:text-slate-400">
                                        <span>By <%= article.author %></span>
                                        <span><%= article.readTime %></span>
                                    </div>
                                    <button class="mt-5 w-full text-sm py-2 font-semibold text-gold-600 dark:text-gold-500 bg-gold-500/10 hover:bg-gold-500/20 rounded-lg">Read Now</button>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>

                <!-- Video Tutorials -->
                <div class="mt-12">
                    <h2 class="text-2xl font-bold mb-4">Video Tutorials</h2>
                    <div class="flex space-x-6 overflow-x-auto pb-4 -mx-4 px-4">
                        <% academy.videos.forEach(video => { %>
                            <div class="bg-white dark:bg-slate-900/50 rounded-xl border border-slate-200 dark:border-slate-800 card-glow overflow-hidden flex-shrink-0 video-card">
                                <div class="relative">
                                    <img src="<%= video.thumbnail %>" alt="Video thumbnail" class="w-full h-auto object-cover">
                                    <div class="absolute inset-0 bg-black/30 flex items-center justify-center">
                                        <button class="p-3 bg-white/20 backdrop-blur-sm rounded-full text-white hover:bg-white/40">
                                            <i data-lucide="play" class="h-8 w-8 fill-current"></i>
                                        </button>
                                    </div>
                                    <span class="absolute bottom-2 right-2 px-2 py-1 text-xs font-medium text-white bg-black/50 rounded"><%= video.duration %></span>
                                </div>
                                <div class="p-4">
                                    <h4 class="font-semibold"><%= video.title %></h4>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>

            </main>
        </div>
    </div>
<script>
    // Initialize Lucide Icons
    if (typeof lucide !== 'undefined') {
        lucide.createIcons();
    }

    // --- Theme Toggler ---
    const themeToggle = document.getElementById('theme-toggle');
    if (themeToggle) {
        const htmlEl = document.documentElement;
        themeToggle.addEventListener('click', () => {
            htmlEl.classList.toggle('dark');
            localStorage.setItem('theme', htmlEl.classList.contains('dark') ? 'dark' : 'light');
        });
    }

    // --- Mobile Sidebar ---
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const sidebar = document.querySelector('aside');
    const sidebarCloseButton = document.getElementById('sidebar-close-button');
    const sidebarOverlay = document.getElementById('sidebar-overlay');
    
    if (mobileMenuButton && sidebar && sidebarCloseButton && sidebarOverlay) {
        const openSidebar = () => { sidebar.classList.remove('-translate-x-full'); sidebarOverlay.classList.remove('hidden'); };
        const closeSidebar = () => { sidebar.classList.add('-translate-x-full'); sidebarOverlay.classList.add('hidden'); };
        mobileMenuButton.addEventListener('click', openSidebar);
        sidebarCloseButton.addEventListener('click', closeSidebar);
        sidebarOverlay.addEventListener('click', closeSidebar);
    }
</script>
</body>
</html>
