            top: 50%;
            left: 50%;
            border-radius: 50%;
            opacity: 0;
            transform: translate(-50%, -50%);
            transition: opacity 0.3s ease-in-out, transform 0.3s ease-in-out;
        }
        .cursor-dot {
            width: 8px;
            height: 8px;
            background-color: #facc15;
