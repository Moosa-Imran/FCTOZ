<% if (typeof success !== 'undefined' && success) { %>
    <div id="success-container" class="fixed top-5 right-5 z-50 flex flex-col items-end space-y-3">
        <div class="success-toast max-w-sm w-full bg-green-500/10 border border-green-500/20 text-white p-4 rounded-lg shadow-lg flex items-start">
            <div class="flex-shrink-0">
                <i data-lucide="check-circle" class="h-5 w-5 text-green-400"></i>
            </div>
            <div class="ml-3">
                <p class="text-sm font-medium text-green-300">Success</p>
                <p class="text-sm text-slate-300 mt-1"><%= success.msg %></p>
            </div>
            <div class="ml-auto pl-3">
                <div class="-mx-1.5 -my-1.5">
                    <button type="button" class="inline-flex rounded-md p-1.5 text-green-400 hover:bg-green-500/20 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-900 focus:ring-green-500" onclick="this.parentElement.closest('.success-toast').remove()">
                        <span class="sr-only">Dismiss</span>
                        <i data-lucide="x" class="h-5 w-5"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <script>
        // Auto-dismiss the success alert after 5 seconds
        document.addEventListener('DOMContentLoaded', () => {
            const successAlert = document.querySelector('.success-toast');
            if (successAlert) {
                setTimeout(() => {
                    successAlert.style.transition = 'opacity 0.5s ease';
                    successAlert.style.opacity = '0';
                    setTimeout(() => successAlert.remove(), 500);
                }, 5000);
            }
        });
    </script>
<% } %>
