<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up - FCTOZ</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/lucide@latest" defer></script>

    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    fontFamily: { sans: ['Inter', 'sans-serif'] },
                    colors: {
                        gold: { 400: '#facc15', 500: '#eab308', 600: '#ca8a04' },
                        gray: { 950: '#0c0c0f', 900: '#121216', 800: '#1a1a1f' }
                    },
                }
            }
        }
    </script>
    <style>
        body { background-color: #0c0c0f; color: #e2e8f0; overflow-x: hidden; }
        .auth-bg { background-image: radial-gradient(circle at 50% 0%, rgba(161, 98, 7, 0.15), transparent 50%), radial-gradient(circle at 10% 20%, rgba(161, 98, 7, 0.1), transparent 40%), radial-gradient(circle at 90% 80%, rgba(161, 98, 7, 0.1), transparent 40%); }
        .auth-card { background-color: rgba(18, 18, 22, 0.8); backdrop-filter: blur(12px); -webkit-backdrop-filter: blur(12px); }
        .strength-bar { height: 4px; border-radius: 2px; transition: width 0.3s ease, background-color 0.3s ease; }
    </style>
</head>
<body class="font-sans antialiased">

    <%- include('partials/alerts.ejs', { errors: typeof errors !== 'undefined' ? errors : [] }) %>

    <div class="min-h-screen flex items-center justify-center auth-bg p-4">
        <div class="w-full max-w-md">
            <div class="text-center mb-8">
                <a href="/" class="text-4xl font-bold text-white">FCTOZ</a>
                <p class="mt-2 text-slate-400">Create your account and start the journey.</p>
            </div>

            <div class="auth-card border border-slate-800 rounded-2xl p-8 shadow-2xl shadow-black/20">
                <form id="signup-form">
                    <div class="space-y-6">
                        <div>
                            <label for="full-name" class="block text-sm font-medium text-slate-300">Full Name</label>
                            <div class="mt-1">
                                <input id="full-name" name="full-name" type="text" autocomplete="name" required class="w-full bg-gray-900 border border-slate-700 rounded-lg px-4 py-3 text-white focus:ring-2 focus:ring-gold-500 focus:border-gold-500 transition">
                            </div>
                        </div>
                        
                        <div>
                            <label for="email" class="block text-sm font-medium text-slate-300">Email Address</label>
                            <div class="mt-1">
                                <input id="email" name="email" type="email" autocomplete="email" required class="w-full bg-gray-900 border border-slate-700 rounded-lg px-4 py-3 text-white focus:ring-2 focus:ring-gold-500 focus:border-gold-500 transition">
                            </div>
                        </div>

                        <div>
                            <label for="password" class="block text-sm font-medium text-slate-300">Password</label>
                            <div class="mt-1">
                                <input id="password" name="password" type="password" autocomplete="new-password" required class="w-full bg-gray-900 border border-slate-700 rounded-lg px-4 py-3 text-white focus:ring-2 focus:ring-gold-500 focus:border-gold-500 transition">
                            </div>
                            <div class="mt-2 flex items-center space-x-2">
                                <div id="strength-bar-1" class="strength-bar w-1/4 bg-slate-700"></div>
                                <div id="strength-bar-2" class="strength-bar w-1/4 bg-slate-700"></div>
                                <div id="strength-bar-3" class="strength-bar w-1/4 bg-slate-700"></div>
                                <div id="strength-bar-4" class="strength-bar w-1/4 bg-slate-700"></div>
                            </div>
                            <p id="strength-text" class="text-xs text-slate-500 mt-1"></p>
                        </div>

                        <div>
                            <label for="confirm-password" class="block text-sm font-medium text-slate-300">Confirm Password</label>
                            <div class="mt-1">
                                <input id="confirm-password" name="confirmPassword" type="password" autocomplete="new-password" required class="w-full bg-gray-900 border border-slate-700 rounded-lg px-4 py-3 text-white focus:ring-2 focus:ring-gold-500 focus:border-gold-500 transition">
                            </div>
                        </div>

                        <div>
                            <button type="submit" id="create-account-btn" class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-bold text-gray-950 bg-gold-500 hover:bg-gold-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gold-500 focus:ring-offset-gray-950 transition">
                                Create Account
                            </button>
                        </div>
                    </div>
                </form>

                <div class="mt-6">
                    <div class="relative">
                        <div class="absolute inset-0 flex items-center"><div class="w-full border-t border-slate-700"></div></div>
                        <div class="relative flex justify-center text-sm"><span class="px-2 bg-gray-900 text-slate-500">Or sign up with</span></div>
                    </div>
                    <div class="mt-6">
                        <a href="/auth/google" class="w-full inline-flex items-center justify-center py-3 px-4 border border-slate-700 rounded-lg shadow-sm bg-gray-900 text-sm font-medium text-slate-300 hover:bg-gray-800 transition">
                           <svg class="w-5 h-5 mr-3" role="img" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><title>Google</title><path d="M12.48 10.92v3.28h7.84c-.24 1.84-.85 3.18-1.73 4.1-1.02 1.08-2.58 2.03-4.56 2.03-5.48 0-9.96-4.48-9.96-9.96s4.48-9.96 9.96-9.96c3.18 0 5.22 1.34 6.43 2.54l2.24-2.28C19.49 1.08 16.28 0 12.48 0 5.88 0 .02 5.88.02 12.48s5.86 12.48 12.46 12.48c6.92 0 12.02-4.8 12.02-12.02 0-.8-.08-1.58-.22-2.32H12.48z" fill="#FFFFFF"/></svg>
                            Continue with Google
                        </a>
                    </div>
                </div>
            </div>

            <p class="mt-8 text-center text-sm text-slate-400">
                Already have an account?
                <a href="/auth/login" class="font-medium text-gold-500 hover:text-gold-400">Sign in</a>
            </p>
        </div>
    </div>

    <!-- OTP Verification Modal -->
    <div id="otp-modal" class="fixed inset-0 bg-black/70 flex items-center justify-center hidden z-50 p-4">
        <div class="auth-card border border-slate-800 rounded-2xl p-8 shadow-2xl shadow-black/20 w-full max-w-sm">
            <h2 class="text-2xl font-bold text-center text-white">Verify Your Email</h2>
            <p class="text-center text-sm text-slate-400 mt-2">Enter the 6-digit code sent to your email.</p>
            <form id="otp-form" class="mt-6">
                <input id="otp-input" type="text" maxlength="6" required class="w-full bg-gray-900 border border-slate-700 rounded-lg px-4 py-3 text-white text-center text-2xl tracking-[1em] focus:ring-2 focus:ring-gold-500 focus:border-gold-500 transition">
                <p id="otp-error" class="text-red-500 text-sm mt-2 text-center h-4"></p>
                <button type="submit" id="verify-otp-btn" class="mt-4 w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-bold text-gray-950 bg-gold-500 hover:bg-gold-600 transition">Verify</button>
            </form>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            lucide.createIcons();
            
            const signupForm = document.getElementById('signup-form');
            const otpModal = document.getElementById('otp-modal');
            const otpForm = document.getElementById('otp-form');
            const otpError = document.getElementById('otp-error');
            const createAccountBtn = document.getElementById('create-account-btn');

            signupForm.addEventListener('submit', async (e) => {
                e.preventDefault();
                createAccountBtn.disabled = true;
                createAccountBtn.textContent = 'Sending...';

                const formData = new FormData(signupForm);
                const data = Object.fromEntries(formData.entries());

                const response = await fetch('/auth/send-otp', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                if (response.ok) {
                    otpModal.classList.remove('hidden');
                } else {
                    const result = await response.json();
                    // Display errors from backend
                    alert(result.errors.map(e => e.msg).join('\n'));
                }
                createAccountBtn.disabled = false;
                createAccountBtn.textContent = 'Create Account';
            });

            otpForm.addEventListener('submit', async (e) => {
                e.preventDefault();
                otpError.textContent = '';
                const otp = document.getElementById('otp-input').value;
                
                const response = await fetch('/auth/verify-otp', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ otp })
                });

                const result = await response.json();

                if (response.ok) {
                    window.location.href = result.redirectUrl;
                } else {
                    otpError.textContent = result.errors[0].msg;
                }
            });

            // Password strength meter logic...
            const passwordInput = document.getElementById('password');
            const strengthText = document.getElementById('strength-text');
            const strengthBars = Array.from({length: 4}, (_, i) => document.getElementById(`strength-bar-${i+1}`));
            passwordInput.addEventListener('input', () => {
                const password = passwordInput.value;
                let score = 0;
                if (password.length >= 8) score++;
                if (/[a-z]/.test(password) && /[A-Z]/.test(password)) score++;
                if (/[0-9]/.test(password)) score++;
                if (/[^A-Za-z0-9]/.test(password)) score++;
                const strengthLevels = [
                    { text: 'Very Weak', color: 'bg-red-500' }, { text: 'Weak', color: 'bg-orange-500' },
                    { text: 'Moderate', color: 'bg-yellow-500' }, { text: 'Strong', color: 'bg-green-500' },
                    { text: 'Very Strong', color: 'bg-green-500' }
                ];
                strengthText.textContent = password.length > 0 ? `Strength: ${strengthLevels[score].text}` : '';
                strengthBars.forEach((bar, index) => {
                    bar.className = `strength-bar w-1/4 ${index < score ? strengthLevels[score].color : 'bg-slate-700'}`;
                });
            });
        });
    </script>
</body>
</html>
